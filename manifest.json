{
    "manifest_version":3,
    "name":"controle por gestos",
    "version":"1.0",
    "description":"controla a pagina por gestos",
    "permissions":[
        "activeTab",
        "scripting",
        "tabs"
    ],
    "action":{
        "default_popup":"popup.html"
    },
    "content_scripts":[
        {
            "matches":["<all_urls>"],
            "js":["content.js"],
            "run_at":"document_idle"
        }
    ],
    "web_accessible_resources":[
        {
            "resources":["handtrack.min.js"],
            "matches":["<all_urls>"]
        }
    ]
}